" keep buffers open
set hidden

"Indentation
set shiftwidth=4
"tabs into spaces
set expandtab
set smartindent
set tabstop=4
set softtabstop=4
" Don't want my tab command to get overwritten
augroup expandtabFTW
    autocmd!
    autocmd FileType * setlocal expandtab
augroup END
set backspace=2
set foldmethod=marker
set cino=N-s

"uncategorized
" source .vimrc in any folder
set exrc 
set wildignore=*.so,*.sw,*.pyc
set mouse=a

" Give more space for displaying messages
set cmdheight=2

" default updatetime from 4000ms to 50 is not good for async update
set updatetime=50

" angle brackets % matching
set matchpairs+=<:>

